<div class="booyah-box">
	<div class="col-xs-4">
		<%= image_tag 'boy.png' %>
		<%= image_tag 'girl.png' %>
	</div>
	<div class="col-xs-8">
		<h1><%= @user.email %></h1><br />
		<h3>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h3><br />
