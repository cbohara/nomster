<br /><br />
<div class="booyah-box">
	<div class="col-xs-4">
		<%= image_tag 'boy.png' %>
		<%= image_tag 'girl.png' %>
	</div>
	<div class="col-xs-8">
		<h1><%= @user.email %></h1><br />
		<h3>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h3><br />
		<h4><%= @user.comments.count %> total comments</h4>
		<h4><%= @user.comments.where(rating: '5_stars').count %> total 5 star reviews</h4>
	</div>
	<div class="clear"></div>
</div>
<br />
<div class="clear"></div>
<br />
<h1 class="text-center">My Places</h1><br />
<% @user.places.each do |place| %>
	<div class="booyah-box col-xs-10 col-xs-offset-1">
		<h1><%= link_to place.name, place_path(place) %></h1><br />
		<i><%= place.address %></i><br />
		<p><%= place.description %></p><br />
	</div>
<% end %>

<div class="clear"></div><br /><br />
<h1 class="text-center">My Comments</h1><br />
	<% @user.comments.each do |comment| %>
	<div class="col-xs-12 col-sm-6">
		<blockquote>
			<% if comment.humanized_rating.present? %>
				<b><%= comment.humanized_rating %></b> -
			<% end %>
		<%= comment.message %>
		<br /><br />
		<h4><%= link_to comment.place.name, place_path(comment.place) %></h4>
		</div>
		</blockquote>
	</div>
	<% end %>

